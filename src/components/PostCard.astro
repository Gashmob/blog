---
import type { PostEntry } from "../content.config.ts";
import { sprintf } from "sprintf-js";

export interface Props {
    post: PostEntry;
}

const { post } = Astro.props;

const formatted_date = sprintf(
    "%4d-%02d-%02d",
    post.data.date.getFullYear(),
    post.data.date.getMonth() + 1,
    post.data.date.getDate(),
);
---

<a
    href={`/post/${post.data.slug}`}
    class="hover:bg-background-active hover:ring-font-secondary group ring-border animation shadow-shadow flex h-full flex-col gap-3 rounded-lg pb-3 shadow-md ring-2 select-none hover:shadow-none active:ring-0"
>
    <div class="mx-4 mt-2 flex justify-between gap-6">
        <h3
            class="group-hover:text-font-secondary animation animation self-start rounded-lg text-xl opacity-90 group-hover:font-semibold group-hover:tracking-wide"
        >
            {post.data.title}
        </h3>
        <div class="mt-1 flex">
            <div class="hidden group-hover:block">
                <i class="fa-solid fa-arrow-right text-font-secondary"></i>
            </div>
            <div class="group-hover:hidden">
                <i class="fa-solid fa-chevron-right animation"></i>
            </div>
        </div>
    </div>
    <div class="mx-4">
        <p class="text-sm">{post.data.description}</p>
    </div>
    <div>
        <div class="mx-4 flex flex-wrap gap-6 opacity-80 group-hover:mb-0">
            <div class="flex gap-1 font-mono group-hover:hidden">
                <i class="fa-solid fa-calendar-days animation size-4 translate-y-px"></i>
                <p class="animation text-sm">
                    {formatted_date}
                </p>
            </div>
        </div>
        <div class="mx-3 hidden flex-wrap group-hover:flex">
            {
                post.data.tags.map((tag: string) => (
                    <p class="ring-font bg-background animation mx-1 rounded-lg px-3 pb-0.5 text-sm opacity-90">
                        {tag}
                    </p>
                ))
            }
        </div>
    </div>
</a>
