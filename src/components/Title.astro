---
import type { PostEntry } from "../content.config.ts";
import { sprintf } from "sprintf-js";

export interface Props {
    post: PostEntry;
}

const { post } = Astro.props;

const formatted_date = sprintf(
    "%4d-%02d-%02d",
    post.data.date.getFullYear(),
    post.data.date.getMonth() + 1,
    post.data.date.getDate(),
);
---

<div class="mx-3 font-mono">
    <h1 class="mb-8 text-6xl">{post.data.title}</h1>
    <p class="mb-2">
        <i class="fa-solid fa-calendar-days animation size-4 translate-y-px"></i>
        <span>{formatted_date}</span>
    </p>
    <p>
        <i class="fa-solid fa-tag"></i>
        <span class="inline-flex gap-3">
            {
                post.data.tags.map((tag) => (
                    <a href={new URL(`/tag/${tag}`, Astro.url)} class="hover:text-font-secondary">
                        {tag}
                    </a>
                ))
            }
        </span>
    </p>
    <div class="my-10 flex justify-center">
        <div class="border-border w-4/5 border-b-2"></div>
    </div>
</div>
